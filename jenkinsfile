pipeline {
    agent none

    stages {
        stage('Source') {
            steps {
                script {
                    echo 'Stage 1: Source'
             }
                
            }
        }
        stage('Test') {
            steps {
                echo 'Stage 2: Test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Stage 3: Deploy'
                timeout(time: 1, unit: 'MINUTES') {
                    sh './health-check.sh'
                }
            }
        }
    }
}