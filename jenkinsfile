pipeline {
    agent any

    stages {
        stage('Source') {
            steps {
                script {
                    echo 'Stage 1: Source'
                    echo "BUILD NUMBER = ${env.BUILD_DISPLAY_NAME}"
                    echo "BUILD URL = ${env.BUILD_URL}"
             } 
            }
        }
        stage('Test') {
            steps {
                echo 'Stage 2: Test'
                echo "GIT BRANCH NAME = ${env.GIT_BRANCH}"
                echo "GIT URL = ${env.GIT_URL}"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Stage 3: Deploy'
                echo "JENKINS VERSION = ${env.JENKINS_VERSION}"
            }
        }
    }
}