pipeline {
    agent none

    stages {
        stage('Source') {
            steps {
                script {
                    echo 'Stage 1: Source'
                    echo "BUILD NUMBER = ${env.BUILD_NUMBER}"
             }
                
            }
        }
        stage('Test') {
            steps {
                echo 'Stage 2: Test'
                sh "printenv | sort"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Stage 3: Deploy'
            }
        }
    }
}