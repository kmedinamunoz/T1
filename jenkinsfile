pipeline {
    agent none

    stages {
        stage('Source') {
            steps {
                script {
                    echo 'Stage 1..'
                    TimeStamp
             }
                
            }
        }
        stage('Test') {
            steps {
                echo 'Staging 2..'
                sh 'ls "$JENKINS_HOME/jobs/$JOB_NAME/builds/$BUILD_NUMBER/archive"'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Staging 3....'
                retry(3) {
                    sh './flakey-deploy.sh'
                }

                timeout(time: 5, unit: 'MINUTES') {
                    sh './health-check.sh'
                }
            }
        }
    }
}