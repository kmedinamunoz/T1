        }
        stage('Test') {
            steps {
                echo 'Stage 2: Test'
                echo "BUILD NUMBER = ${env.BUILD_DISPLAY_NAME}"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Stage 3: Deploy'
                echo "WORKSPACE = ${env.WORKSPACE}"
            }
        }
    }
}