pipeline {
    agent { docker { image 'node:16.13.1-alpine' } }

    stages {
        stage('Source') {
            steps {
                script {
                    echo 'Stage 1: Source'
                    sh 'node --version'
             }
                
            }
        }
        stage('Test') {
            steps {
                echo 'Stage 2: Test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Stage 3: Deploy'
            }
        }
    }
}