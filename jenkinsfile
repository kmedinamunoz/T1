pipeline {
    agent none

    stages {
        stage('Source') {
            steps {
                echo 'Stage 1..'
                echo "TimeStamp: ${Util.getTimeSpanString(System.currentTimeMillis())}"
            }
        }
        stage('Test') {
            steps {
                echo 'Staging 2..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Staging 3....'
                retry(3) {
                    sh './flakey-deploy.sh'
                }

                timeout(time: 5, unit: 'MINUTES') {
                    sh './health-check.sh'
                }
            }
        }
    }
}